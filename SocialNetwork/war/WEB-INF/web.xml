<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>postForm</servlet-name>
		<servlet-class>socialNetwork.postFormServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>userForm</servlet-name>
		<servlet-class>socialNetwork.formSocialNetworkServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>groupForm</servlet-name>
		<servlet-class>socialNetwork.CreateGroupServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>addMembersForm</servlet-name>
		<servlet-class>socialNetwork.addMembersServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>groupPostForm</servlet-name>
		<servlet-class>socialNetwork.groupPostFormServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>postForm</servlet-name>
		<url-pattern>/postForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>addMembersForm</servlet-name>
		<url-pattern>/addMembersForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	<servlet-name>userForm</servlet-name>
		<url-pattern>/userForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	<servlet-name>groupForm</servlet-name>
		<url-pattern>/groupForm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	<servlet-name>groupPostForm</servlet-name>
		<url-pattern>/groupPostForm</url-pattern>
	</servlet-mapping>
	
    <welcome-file-list>
        <welcome-file>userPage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
